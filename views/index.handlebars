    <div class="container"> 
     
        <div class="jumbotron text-center bg-danger text-light">
             <h1 class="display-4" id="title">Gut-Good Burger <i class='fas fa-hamburger' style='font-size:34px;color:red'></i></h1>
             <p class="lead">Welcome to Gut-Good Burger</p>
            
        </div> 

        <div class="row">
            <div class="col-sm-12">
                <div class="card border border-secondary">
                    <div class="card-header text-white" id="submit-card">
                      Add Burger to Devour!
                     </div>

              
                     <div class="card-body">
                        <form class="create-form">
                            <div class="form-group"> 
                              <label for="burger">Submit order here</label>
                              <input type="text" class="form-control" id="burgerToDevour" placeholder=""> 
                            </div> 
                             <button class="btn btn-danger" type="Submit">Submit order</button>
                        </form>
                     </div>
                 </div>
            </div>
        </div>
    

        <div class="row mt-4"> 
                <div class="col-md-6 mt-4"> 
                    <div class="card border border-secondary">
                        <div class="card-header  text-white"id="devour-Card-header">
                          Burgers to Devour
                        </div>
               
                        <div class="card-body">
                            <ul class="list-group">
                               {{#each burgers}}
                               {{#unless devoured}}
                               {{> burgers/burger-block devoured=true}}
                               {{#unless}}
                               {{/each}} 
                            </ul>
                        </div>     
                    </div>
                </div>
        
            
            <div class="col-md-6 mt-4"> 
                <div class="card border  border-secondary">
                    <div class="card-header  text-white" id="devoured-Card-header">
                          Devoured Burgers
                    </div>
            
                    <div class="card-body">
                        <ul class="list-group">
                             {{#each burgers}}
                            {{#unless devoured}}
                            {{> burgers/burger-block devoured=false}}
                            {{#if}}
                            {{/each}} 
                        </ul>
                    </div>     
                </div>
            </div>
        </div>
    

      
        <div class=" row mt-5">
            <div class="col-md-12">
                <div class="card-body footer-body text white"> 
                  <h5 class="card-title text-white">Gut-Good Burger</h5>
                  <!-- <p class="card-text">Welcome to Gut-Good Burger</p> -->
                  <a href="https://github.com/tbd" class="btn btn-danger mr-2" target="_blank">GitHub Repo</a>

                </div>
            </div> 
        </div>
    </div>